{
    "name": "bengor-user/user-bundle",
    "description": "Symfony bundle on top of BenGor's user library",
    "keywords": ["user", "bundle", "ddd"],
    "license": "MIT",
    "type": "symfony-bundle",
    "authors": [
        {
            "name": "Beñat Espiña Diaz",
            "email": "benatespina@gmail.com",
            "homepage": "http://benatespina.com"
        },
        {
            "name": "Gorka Laucirica Ibarra",
            "email": "gorka.lauzirika@gmail.com",
            "homepage": "http://gorkalaucirica.net"
        }
    ],
    "require": {
        "php": "^5.5 || ^7.0",

        "bengor-user/user": "0.6.x-dev",
        "bengor-user/doctrine-orm-bridge-bundle": "dev-master",
        "bengor-user/swift-mailer-bridge-bundle": "dev-master",
        "bengor-user/symfony-routing-bridge-bundle": "dev-master",
        "bengor-user/symfony-security-bridge-bundle": "dev-master",
        "bengor-user/twig-bridge-bundle": "dev-master",

        "symfony/form": "^2.8 || ^3.0",
        "symfony/framework-bundle": "^2.8 || ^3.0",
        "symfony/twig-bundle": "^2.8 || ^3.0",

        "simple-bus/symfony-bridge": "^4.0",
        "simple-bus/doctrine-orm-bridge": "^4.0"

    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^1.11",
        "phpspec/phpspec": "^2.5"
    },
    "scripts": {
        "cs": [
            "php-cs-fixer fix --config-file=.php_cs",
            "php-cs-fixer fix --config-file=.phpspec_cs"
        ],
        "test": "phpspec run"
    },
    "autoload": {
        "psr-4": {
            "BenGorUser\\UserBundle\\": "src/BenGorUser/UserBundle/"
        },
        "exclude-from-classmap": ["/spec/"]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.6.x-dev"
        }
    }
}
