{% trans_default_domain 'BenGorUser' %}

<section>
    {% for flash_message in app.session.flashbag.get('notice') %}
        <div class="flash-notice">
            {{ flash_message | trans }}
        </div>
    {% endfor %}

    <form action="{{ path(login_check) }}" method="post">
        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey | trans }}
            </div>
        {% endif %}

        <div>
            <label for="email">{{ 'security.view_email_label' | trans }}</label>
            <input type="email" id="email" name="_email" value="{{ last_email }}"/>
        </div>

        <div>
            <label for="password">{{ 'security.view_password_label' | trans }}:</label>
            <input type="password" id="password" name="_password"/>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

        <br/>
        <button type="submit">{{ 'security.view_submit_button' | trans }}</button>
    </form>
</section>
