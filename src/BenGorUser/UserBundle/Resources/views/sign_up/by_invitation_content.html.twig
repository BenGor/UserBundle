{% trans_default_domain 'BenGorUser' %}

<section>
    <div>{{ email }}</div>
    {% if app.session.flashbag.peekAll|length > 0 %}
        {% for type, messages in app.session.flashbag.all %}
            {% for message in messages %}
                <div class="{{ type ? type : '' }}">
                    {{ message | trans }}
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}

    {{ form_start(form) }}
    {{ form_widget(form) }}

    {{ form_end(form) }}
</section>
